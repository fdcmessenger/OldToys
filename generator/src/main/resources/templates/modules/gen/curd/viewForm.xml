<?xml version="1.0" encoding="utf-8"?>
<template>
    <name>viewForm</name>
    <filePath>src/main/resources/META-INF/resources/views/modules/${moduleName}/${subModuleName}</filePath>
    <fileName>${className}Form.jsp</fileName>
    <content><![CDATA[
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@ include file="/views/include/taglib.jsp"%>
﻿<!DOCTYPE HTML>
<html lang="zh-cn">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>${functionNameSimple}表单</title>
        <%@ include file="/views/include/css.jsp"%>
    </head>
    <body>
            <form:form id="inputForm" modelAttribute="bean" action="#" method="post" cssClass="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                <#assign columnField>
                    <#list table.columnList as c>
                        <#if c.isPk?? &&c.isPk==true>
                            <form:hidden path="${c.javaField}"/>
                        <#else>
                            <div class="form-group row">
                                <label class="col-md-1 control-label">${c.comments}：</label>
                                    <#if c.jdbcType?? && c.jdbcType=="date">
        
                                        <sys:dateselect  id="${c.javaField}" name="${c.javaField}"  value="${r"${bean."+c.javaField+r"}"}" type="date" pattern="yyyy-MM-dd" allowInput="false"/>
                                    <#elseif c.jdbcType?? && c.jdbcType?starts_with("datetime")>
                                        <sys:dateselect  id="${c.javaField}" name="${c.javaField}"  value="${r"${bean."+c.javaField+r"}"}" type="datetime" pattern="yyyy-MM-dd HH:mm:ss" allowInput="false"/>
         
                                    <#elseif c.jdbcType?? && c.jdbcType?starts_with("timestamp")>
                                        <form:input path="${c.javaField}"  disabled="true" readonly="true" htmlEscape="false"  cssClass="form-control col-md-6" />
         
                                     <#elseif c.showType== "select">
                                        <form:select path="${c.javaFieldId}" cssClass="form-control col-md-6">
                                                <form:option value="" label=""/>
                                                <form:options items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false"/>
                                        </form:select>
                                    <#elseif c.showType == "checkbox">
                                            <form:checkboxes path="${c.javaFieldId}List" items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false" cssClass="checkbox-inline"/>
                                    <#elseif c.showType == "radiobox">
                                            <form:radiobuttons path="${c.javaFieldId}" items="${"$"}{fns:getDictList('${c.dictType}')}" itemLabel="label" itemValue="value" htmlEscape="false" cssClass="radio-inline"/>
                                    <#else>
                                        <form:input path="${c.javaField}"  htmlEscape="false"  cssClass="form-control col-md-6" />
                                    
                                    </#if>
                            </div>
                        </#if>
                    </#list>
                </#assign>
                ${columnField}
                </div>
            </div>
        <div class="row">
                    <hr/>
                </div>
                <div class="row">
                        <div class="form-actions col-md-1">
                            <input id="btnSubmit" class="btn btn-primary " type="submit" value="保 存" />&nbsp;
                        </div>
                        <div class="form-actions col-md-1">
                            <input id="btnCancel" class="btn btn-warning" type="button" value="返 回" onclick="${ClassName}InfoDlg.close();"/>
                        </div>
                </div>
            </form:form>
    </body>
        <%@ include file="/views/include/script.jsp"%>
        <script src="${r"${ctxStatic}"}/modules/${moduleName}/${className}Form.js"></script>
</html>
   ]]>
    </content>
</template>